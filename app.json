{
  "expo": {
    "name": "TRCAPP",
    "slug": "trcapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": ["ios", "android", "web"],
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "TRCAPP needs access to your camera to upload photos.",
        "NSPhotoLibraryUsageDescription": "TRCAPP needs access to your photo library to upload photos.",
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby offices."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "serviceWorker": {
        "src": "./service-worker.js"
      }
    },
    "newArchEnabled": true
  }
}
